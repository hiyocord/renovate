{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":configMigration",
    ":pinDevDependencies"
  ],
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "groupName": "cloudflare dependencies",
      "packagePatterns": [
        "@cloudflare/workers-types",
        "wrangler"
      ],
      "automerge": true
    },
    {
      "groupName": "build and testing dependencies",
      "packagePatterns": [
        "typescript",
        "vite",
        "vite-plugin-dts",
        "vite-tsconfig-paths",
        "@cloudflare/vite-plugin",
        "vitest"
      ],
      "automerge": true
    },
    {
      "groupName": "changesets dependencies",
      "packagePatterns": [
        "@changesets/changelog-github",
        "@changesets/cli"
      ],
      "automerge": true
    },
    {
      "groupName": "pip dependencies",
      "matchManagers": ["pip"],
      "automerge": true
    }
  ]
}
